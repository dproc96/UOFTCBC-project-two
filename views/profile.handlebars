
<div class="grid--content">
    <div class="card">
        <h1>{{user.firstname}} {{user.lastname}}</h1>
        <img class="profile-form-image block__centered" src="/images/uploads/{{user.image}}" onerror="this.onerror=null; this.src='images/profile.jpg'" alt="">
        <h5>Current Score: {{user.score}}</h5>
        <h5>Email: {{user.email}}</h5>
        <a style="width: max-content; margin: 5px 0;" class="btn" href="/account">Edit Profile</a>

        <div class="slide">
            {{#each user.Experiences}}
            <div class="carousel--element grow-in">
                <div class="carousel--element--header">
                    <h3>{{name}}</h3>
                </div>
                <img src="images/uploads/{{image}}" onerror="this.onerror=null; this.src='images/toronto.jpg'" alt="">
                <div class="flex badge-box">
                    <div class="carousel--element--badge">
                        <a href="/experiences/{{id}}/edit">
                            <h4>Edit This</h4>
                        </a>
                    </div>
                    <div class="carousel--element--badge">
                        <a href="/experiences/{{id}}">
                            <h4>Read More</h4>
                        </a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>